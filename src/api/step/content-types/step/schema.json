{
  "kind": "collectionType",
  "collectionName": "steps",
  "info": {
    "singularName": "step",
    "pluralName": "steps",
    "displayName": "Step",
    "description": "Steps for step-by-step processes and workflows"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "svgIcon": {
      "type": "text",
      "required": true
    },
    "order": {
      "type": "integer",
      "required": true,
      "default": 1,
      "min": 1
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "backgroundColor": {
      "type": "enumeration",
      "enum": ["yellow", "blue", "green", "purple", "orange"],
      "default": "yellow"
    }
  }
}
