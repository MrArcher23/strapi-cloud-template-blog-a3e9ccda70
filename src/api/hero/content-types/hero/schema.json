{
  "kind": "collectionType",
  "collectionName": "heroes",
  "info": {
    "singularName": "hero",
    "pluralName": "heroes",
    "displayName": "Hero",
    "description": "Hero sections with flexible positioning and media backgrounds for SJT website"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "companyName": {
      "type": "string",
      "required": true,
      "unique": false
    },
    "subtitle": {
      "type": "text",
      "required": false
    },
    "showOverlay": {
      "type": "boolean",
      "default": true,
      "required": true
    },
    "titlePosition": {
      "type": "enumeration",
      "enum": ["bottom", "center"],
      "default": "bottom",
      "required": true
    },
    "backgroundVideo": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["videos"]
    },
    "backgroundImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "slug": {
      "type": "uid",
      "targetField": "companyName"
    },
    "isActive": {
      "type": "boolean",
      "default": false,
      "required": true
    }
  }
}
