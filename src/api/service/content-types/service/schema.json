{
  "kind": "collectionType",
  "collectionName": "services",
  "info": {
    "singularName": "service",
    "pluralName": "services",
    "displayName": "Service",
    "description": "Servicios que ofrece la empresa con ícono, título y descripción"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "description": {
      "type": "text",
      "required": true
    },
    "svgIcon": {
      "type": "text",
      "required": false
    },
    "iconColor": {
      "type": "enumeration",
      "enum": ["blue", "green", "yellow", "purple", "orange", "red"],
      "default": "blue",
      "required": true
    },
    "order": {
      "type": "integer",
      "default": 1,
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "isActive": {
      "type": "boolean",
      "default": true,
      "required": true
    },
    "featured": {
      "type": "boolean",
      "default": false,
      "required": true
    }
  }
}
