{
  "kind": "collectionType",
  "collectionName": "services",
  "info": {
    "singularName": "service",
    "pluralName": "services",
    "displayName": "Service",
    "description": "Servicios para la galería de construcción"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "description": {
      "type": "text",
      "required": false
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["images"]
    },
    "overlayColor": {
      "type": "enumeration",
      "enum": ["black", "blue", "green", "purple", "red", "yellow"],
      "default": "black",
      "required": true
    },
    "link": {
      "type": "string",
      "required": false
    },
    "isActive": {
      "type": "boolean",
      "default": true,
      "required": true
    },
    "order": {
      "type": "integer",
      "required": true,
      "min": 1,
      "max": 4
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    }
  }
}
